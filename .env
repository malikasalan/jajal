SWAP_SLIPPAGE=0.5  # 0.5% slippage tolerance

# ===== LIQUIDITY POOL SETTINGS =====
# LIQUIDITY_ROUTER=0x...  # Uncomment if adding liquidity
# LIQUIDITY_PERCENT=0.1  # Percentage for liquidity provision

# ===== TIMING CONFIGURATION =====
DURATION=30000  # 30 seconds between operations (adjust for rate limiting)

