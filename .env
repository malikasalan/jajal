# ===== RPC CONFIGURATION =====
LENS_RPC_URL=https://rpc.lens.xyz
LENS_CHAIN_ID=232  # Lens Protocol chain ID

# ===== TOKEN CONTRACTS =====
TOKEN_USDC=0x88F08E304EC4f90D644Cec3Fb69b8aD414acf884  # USDC contract on Lens
TOKEN_WGHO=0x6bDc36E20D267Ff0dd6097799f82e78907105e2F  # WGHO contract on Lens

# ===== WALLET CONFIGURATION =====
# Minimum 2 private keys required, can add up to 10
PRIVATE_KEY_1=your_main_private_key_here  # Required (0x...)
PRIVATE_KEY_2=your_secondary_private_key_here  # Required (0x...)
# PRIVATE_KEY_3=optional_third_key
# PRIVATE_KEY_4=optional_fourth_key

# ===== GAS SETTINGS =====
GAS_PRICE=1000000000  # 1 Gwei (adjust based on network congestion)
GAS_LIMIT=300000  # Gas limit per transaction

# ===== NATIVE TOKEN TRANSFER SETTINGS =====
MIN_BALANCE=0.00001  # Minimum amount to transfer (in native token)
MAX_BALANCE=0.00002  # Maximum amount to transfer (in native token)

# ===== SWAP CONFIGURATION =====
SWAP_ROUTER=0x5eB6b146D7A5322b763C8f8B0Eb2FDd5d15E49De  # Lens swap router
SWAP_PERCENT=0.02  # Percentage of balance to swap (0.02 = 0.02%)
